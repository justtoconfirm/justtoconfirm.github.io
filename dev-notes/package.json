{
  "name": "dev-notes",
  "version": "1.0.0",
  "scripts": {
    "build": "npm run compile-scss && npm run build-js-variables && npm run build-js-functions && npm run build-js-arrays",
    "build-js-functions": "mustache -p views/partials/footer.mustache data/javascript/jsFunctionsData.json views/templates/pageTemplate.mustache > dist/pages/js/js-functions.html",
    "build-js-variables": "mustache -p views/partials/footer.mustache data/javascript/jsVariablesData.json views/templates/pageTemplate.mustache > dist/pages/js/js-variables.html",
    "build-js-arrays": "mustache -p views/partials/footer.mustache data/javascript/jsArrayData.json views/templates/pageTemplate.mustache > dist/pages/js/js-arrays.html",
    "compile-scss": "node-sass --include-path scss src/scss/main.scss dist/css/style.css && npm run beautify-css && npm run minify-css",
    "beautify-css": "beautify-css dist/css/style.css dist/css/style.css",
    "minify-css": "minify dist/css/style.css"
  },
  "author": "Justtoconfirm",
  "license": "ISC",
  "devDependencies": {
    "beautify-css": "^1.0.0",
    "cssbeautify-cli": "^0.5.3",
    "minifier": "^0.8.1",
    "mustache": "^2.3.0",
    "node-sass": "^4.5.3"
  }
}
